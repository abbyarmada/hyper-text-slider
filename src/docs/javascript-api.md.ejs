function toGithubHash(hash) {
  var GITHUB_ILLEGAL = new RegExp('[\\[\\]{}()<>^$#@!%&*+\/\\|~`"\':;,.]', 'g');
  return hash.toLowerCase().replace(/ /g, '-').replace(GITHUB_ILLEGAL, '');
}

function link(name, anchor) {
  return '['+ (anchor || name) +'](#'+ toGithubHash(name) +')';
}

function shorten(fqn) {
  var DOT = '.';
  var PROTO = '.prototype';

  var matches = {};
  [DOT, PROTO].forEach(function(key) {
    var index = -1;
    while ((index = fqn.indexOf(key, index + 1)) !== -1) {
      matches[key] = index;
    }
  });

  var startIndex = matches[PROTO] || matches[DOT] || 0;
  return fqn.substring(startIndex);
}

function fieldSignature(comment) {
  return comment.fqn;
}
function paramList(comment) {
  return comment.multiTags.param.map(function(p) { return p.name; }).join(', ');
}
function methodSignature(comment) {
  return comment.fqn +'('+ paramList(comment) +')';
}
function signature(comment) {
  return comment.type === 'property'? fieldSignature(comment): methodSignature(comment);
}
function typeOf(comment) {
  return comment.type === 'property'? comment.tags.type: comment.tags['return'];
}
